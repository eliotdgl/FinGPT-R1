import sys
import os
sys.path.append(os.path.abspath(os.path.join(os.path.dirname(__file__), '..')))
from Sentiment_Analysis.sentiment_model_class import Sentiment_Analysis_Model
from Sentiment_Analysis.controlled_environment import TextDataGenerator
from sklearn.model_selection import train_test_split
import pandas as pd
import os
from data_loader import get_train_test_split
import pickle

generator=TextDataGenerator()
generated_data=generator.generate_batch()


pkl_path = os.path.join('data', 'local_data', 'generated_data.pkl')
with open(pkl_path, 'wb') as f:
    pickle.dump(generated_data, f)

with open(r'data\local_data\generated_data.pkl', 'rb') as f:
    data= pickle.load(f)
sentiment_model = Sentiment_Analysis_Model()
dataset=sentiment_model.prepare_dataset(data)
sentiment_model.train(dataset)
sentiment_model.save(base_path="Sentiment_Analysis/models/sentiment_model_test_1", timestamp_name="test_1", keep_last=3)
sample_text = "Apple lost $120M last quarter."
probas, predicted_label = sentiment_model.predict(sample_text)
print(f"\nPredicted label for: '{sample_text}' â†’ {predicted_label}\n")